<div class="ui one column center aligned grid mt-3">
  <div class="row">
    <div class="ui orange padded segment" style="min-width: 40%">
      <h2 class="ui large header">
        <i class="power off orange icon"></i>
        <div class="content">
          Login
        </div>
      </h2>
    </div>
  </div>

  <div class="ui orange segment" style="min-width: 40%">
    <div class="ui left aligned basic segment">
      <%= form_with(scope: :session, html: { class: 'ui form', role: 'form' }, url: login_path, local: true) do |f| %>
        <div class="field">
          <%= f.label :username %>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: 'Username' %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field mb-3">
          <%= f.label :password %>
          <div class="ui left icon input">
            <%= f.password_field :password, placeholder: 'Password' %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= f.submit 'Login', class: 'ui orange submit button fluid mb-3' %>
      <% end %>
      <div class="ui horizontal divider mb-3">
        Or
      </div>
      <div class="ui green labeled icon button fluid">
        Create new account!
        <i class="user plus icon"></i>
      </div>
    </div>
  </div>
</div>